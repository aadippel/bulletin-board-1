<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>
    
    <hr>

    <h2>
      Add a new post
    </h2>

<div>
  <div>
    <form action="/insert_post/"  method="post">
      <div>
        <label for="title_field">Title</label>
        <input type="text" id="title_field" name="title">
      </div>
    
      <div>
        <label for="body_field">Body</label>
        <input type="textarea" id="body_field" name="body">
      </div>

      <div>
        <label for="expires_on_field">Expires on</label>
        <input type="date" id="expires_on_field" name="expires_on">
      </div>

     <div>
        <label for="board_id_field">Board ID</label>
        <input type="text" id="board_id_field" name="board_id">
     </div>

      <button>
        Add post
      </button>
    </form>
  </div>
</div>

<hr>

<h2>
  Active posts
</h2>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Body
        </th>

        <th>
          Expires on
        </th>

        <th>
          Board
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_posts.each do |a_post| %>
      <tr>
        <td>
          <%= a_post.id %>
        </td>

        <td>
          <%= a_post.title %>
        </td>

        <td>
          <%= a_post.body %>
        </td>

        <td>
          <%= a_post.expires_on %>
        </td>

        <td>
          <%= a_post.board_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>

        <td>
          <a href="/posts/<%= a_post.id %>">
            Show details
          </a>
 
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<h2></h2>
